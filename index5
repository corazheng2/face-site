    <script>
        // Language toggle functionality
        document.addEventListener('DOMContentLoaded', function() {
            const langToggle = document.getElementById('langToggle');
            let isEnglish = false;
            
            // Function to update text based on language
            function updateLanguage() {
                document.querySelectorAll('[data-en][data-zh]').forEach(element => {
                    element.textContent = isEnglish ? element.getAttribute('data-en') : element.getAttribute('data-zh');
                });
                
                // Update button text
                const buttonText = langToggle.querySelector('span');
                buttonText.textContent = isEnglish ? '中文' : 'EN';
            }
            
            // Toggle language on button click
            langToggle.addEventListener('click', function() {
                isEnglish = !isEnglish;
                updateLanguage();
            });
            
            // Initial language setup
            updateLanguage();
        });
    </script>
